<%- include('include/_header') %>
<section class="kkkkk">
  <div class="box-nav">
    <a href="/" class="border-shadow">
        <span class="text-gradient"><i class="fa-solid fa-arrow-left-long"></i> Go back</span>
    </a>
  </div>
<!--! update form -->
<form method="POST" action="/api/blog/<%= blog._id %>" id="update-Artical">
  <input type="hidden" name="_method" value="PUT">
  <div class="new_Blog">
    <div class="form-grup">
      <input type="hidden" name="id" value="<%= blog._id %>">
      
        <label for="yourName" class="text-light">Writer</label>
        <input type="text" name="yourName" value="<%= blog.yourName %>"  placeholder="">
    </div>  
    <h2 class="blog-data">Update your Blog: </h2>
  <div class="new_Blog">
      <div class="form-grup">
          <label for="title" class="text-light">Title</label>          
          <input type="text" name="title" value="<%= blog.title %>"  placeholder="title">
      </div>  

      <div class="form-grup">
          <label for="description" class="text-light">Description</label>
          <input type="text" name="description" value="<%= blog.description %>" placeholder="description">
      </div>
      <div class="form-grup">
        <label for="artical" class="text-light">Artical</label>
        <textarea name="artical" placeholder="Artical"><%= blog.artical %></textarea>

    </div>
      <div class="form-group">
        <input type="hidden" name="time" value="">
          <button type="submit" class="btn text-dark update">Save</button>
      </div>
  </div>
</form>
</section>
<%- include('include/_footer') %>
